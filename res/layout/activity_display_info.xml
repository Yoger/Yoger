<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/btn_normal">
    <Button
		android:id="@+id/TitleBackBtn"
        android:layout_width="wrap_content"   
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"  
        android:layout_marginLeft="5dp"
        android:text="@string/back"
        android:background="@drawable/selector_btn_back"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleText"
        android:layout_centerInParent="true"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="@string/app_name"/>
     </RelativeLayout>

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="115dp"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/imageOfUser"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/no_pic"
            android:padding="5dp"/>
        
        <LinearLayout 
            android:layout_height="fill_parent"
            android:layout_width="110dp"
            android:orientation="vertical"
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="花生酱女仆子"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="213120657"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/jiFen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="积分：200"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="fans:100"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        
        <Button 
            android:id="@+id/talkToHeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="私信他/她"
            android:layout_gravity="center"/>
         
    </LinearLayout>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/details_line" />
    
    
    <ListView 
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/soldAndQiuGou"/>
    
     <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/details_line" />
     
     <Button 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="关注他/取消关注"
         android:layout_gravity="center"
         android:id="@+id/focusHeORButton"/>"
     

    
</LinearLayout>
