<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/imageOfUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/no_pic"
            android:padding="5dp"/>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="花生酱女仆子"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="213120657"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/jiFen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="积分：200"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="fans:100"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        
        <Button 
            android:id="@+id/editInfoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑资料"
            android:layout_gravity="center"/>
         
    </LinearLayout>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/details_line" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/myFocusImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bre" />

        <TextView 
            android:id="@+id/myFocusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的关注"
            android:layout_gravity="center"/>
         <ImageView 
            android:id="@+id/myCollectImageView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/bre"/>
         <TextView 
            android:id="@+id/myCollectTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:layout_gravity="center"/>
          <ImageView 
            android:id="@+id/myNewsImageView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/bre"/>
        <TextView 
            android:id="@+id/myNewsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的私信"
            android:layout_gravity="center"/>
    </LinearLayout>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/details_line" />
    
    <TextView 
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="订单管理"/>
    
    <ListView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dingDanManage"/>
    
     <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/details_line" />
     
     <TextView 
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="求购管理"/>
    
    <ListView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/qiuGouManage"/>
    
    <Button 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注销"
        android:layout_gravity="center"
        android:id="@+id/exitAccountButton"/>
    
    
 </LinearLayout>