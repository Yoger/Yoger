<?xml version="1.0" encoding="utf-8"?>
 <ScrollView 
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:scrollbars="vertical">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="#F0F0F0"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="left"
        android:text="@string/releaseTitle"
        android:textColor="#000000"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="left"
        android:contentDescription="@null"
        android:src="@drawable/line_" />
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

    <ImageView
            android:id="@+id/goodsRelease_GoodsPic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/no_pic" />
    
         <Button
               android:id="@+id/GoodsRelease_GoodsPhoto"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:layout_marginTop="3dp"
               android:text="@string/sales_release_button_goodsPhoto"/>

        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/sales_display_goodsName"
            android:textColor="#000000"
            android:textSize="15sp" />
        <LinearLayout 
            android:layout_width="0px"
		    android:layout_height="0px" 
		    android:focusable="true"
		    android:focusableInTouchMode="true">
            <requestFocus/>
        </LinearLayout>
        <EditText
            android:id="@+id/edit_release_goodsName"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:background="@drawable/register_input"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dp"
            android:inputType="text"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/sales_display_goodsPrice"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edit_release_goodsPrice"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:background="@drawable/register_input"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dp"
            android:inputType="text"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/sales_display_style"
            android:textColor="#000000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button_release_style"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dp"
            android:inputType="text"
            android:textColor="#000000" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/sales_display_count"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edit_release_goodsCount"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:background="@drawable/register_input"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dp"
            android:inputType="number"
            android:textColor="#000000" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/sales_display_detail"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edit_release_goodsDetail"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:background="@drawable/register_input"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dp"
            android:inputType="text"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
          <ImageView
            android:id="@+id/goodsRelease_GoodsDetailPic1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:src="@drawable/no_pic" />
            <ImageView
            android:id="@+id/goodsRelease_GoodsDetailPic2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:src="@drawable/no_pic" />
              <ImageView
            android:id="@+id/goodsRelease_GoodsDetailPic3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:contentDescription="@null"
            android:layout_weight="1"
            android:src="@drawable/no_pic" />
        
    </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
           <Button
               android:id="@+id/GoodsRelease_GoodsDetailPhoto"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:layout_marginTop="3dp"
               android:text="@string/sales_release_button_goodsDetailPhoto"/>    
     </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="@string/sales_release_key"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edit_release_goodsKey1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/register_input"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dp"
            android:inputType="number"
            android:textColor="#000000" />
          <EditText
            android:id="@+id/edit_release_goodsKey2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/register_input"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dp"
            android:inputType="number"
            android:textColor="#000000" />
            <EditText
            android:id="@+id/edit_release_goodsKey3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/register_input"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dp"
            android:inputType="number"
            android:textColor="#000000" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@null"
        android:src="@drawable/line_" />

    <Button
        android:id="@+id/button_register_commite"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:text="@string/register_button_commit"
        android:textColor="#FFF"
        android:textSize="18sp" />

</LinearLayout>
</ScrollView>